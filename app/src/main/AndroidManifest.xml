<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="info.androidhive.firebase">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_camera_black_48dp"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Authorized.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Authorized.SettingUserActivity"
            android:label="@string/lb_name_activity_SettingUserActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Authorized.SignupActivity"
            android:label="@string/lb_name_activity_SignupActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Authorized.ResetPasswordActivity"
            android:label="@string/lb_name_activity_ResetPasswordActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Authorized.MenuActivity"
            android:label="@string/lb_name_activity_MenuActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SimpleScannerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.DevicesDetailsListActivity"
            android:label="@string/lb_name_activity_DevicesDetailsListActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".Activity.EmployeesListActivity"
            android:label="@string/lb_name_activity_EmployeesListActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.EmployeesDetailsListActivity"
            android:label="@string/lb_name_activity_EmployeesDetailsListActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.AddUserActivity"
            android:label="@string/lb_name_activity_AddUserActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.AddDevicesActivity"
            android:label="@string/lb_name_activity_AddDevicesActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.SaveToFile"
            android:label="@string/lb_name_activity_SaveToFile"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Activity.BaseActivity" />

        <activity android:name=".Activity.DevicesListActivity"
            android:label="@string/lb_name_activity_DevicesListActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" >

        </activity>
    </application>

</manifest>